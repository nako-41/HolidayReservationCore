                                    </blockquote>
                                    <div class="testi-des">
                                        <div class="test-img">
                                            <img src="@item.ClientImage" class="img-fluid" alt="client-img">
                                        </div>
                                        <div class="peopl align-self">
                                            <h3>@item.Client</h3>
                                            <p class="indentity">KOCAELI</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                   

