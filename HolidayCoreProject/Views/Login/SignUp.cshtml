@model HolidayCoreProject.Models.UserRegisterViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zxx">

<head>
	<title>Invent Signup Form Responsive Widget Template | Home :: W3layouts</title>
	<!-- Meta tag Keywords -->
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta charset="UTF-8" />
	<meta name="keywords"
		  content="Invent Signup Form Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
	<script>
		addEventListener("load", function () {
			setTimeout(hideURLbar, 0);
		}, false);

		function hideURLbar() {
			window.scrollTo(0, 1);
		}
	</script>
	<!-- //Meta tag Keywords -->
	<!--/Style-CSS -->
	<link rel="stylesheet" href="~/web/css/style.css" type="text/css" media="all" />
	<!--//Style-CSS -->
</head>

<body>
	<!-- /login-section -->
	<section class="w3l-login-6">
		<div class="login-hny">
			<div class="form-content">
				<div class="form-right">
					<div class="overlay">
						<div class="grid-info-form">
							<h5>RESERVATION</h5>
							<h3>CREATE ACCOUNT </h3>
							<p>
								Birbirinden deneyimli rehberlerimiz esliginde Iskandinav ulkelerinin sogunu.Akdeniz ulkelerinin
								sıcaklıgını guzel ulkemizin Kapadokya'dan Surmeneye,Oludeniz'den Asos'a,Balkan
								Turundan mısır collerine kadar aklınıza gelen her yere bir tık uzaktayız.
								Seyahatlarimize katılmak icin zaman kaybetmeyin anın tadını cıkarın...
							</p>
							<a href="index.html" class="read-more-1 btn">Get Started</a>
						</div>

					</div>
				</div>
				<div class="form-left">

					<form method="post" class="signin-form">
						<div class="form-input">
							<label>Name</label>
							<input type="text" asp-for="Name">
							<span asp-validation-for="Name" class="text-danger"></span>
						</div>
						<div class="form-input">
							<label>SurName</label>
							<input type="text" asp-for="SurName"  />
							<span asp-validation-for="SurName" class="text-danger"></span>
						</div>
						<div class="form-input">
							<label>UserName</label>
							<input type="text" asp-for="UserName" />
							<span asp-validation-for="UserName" class="text-danger"></span>
						</div>
						<div class="form-input">
							<label>Email Addess</label>
							<input type="email" asp-for="Mail" />
							<span asp-validation-for="Mail" class="text-danger"></span>
						</div>
						<div class="form-input">
							<label>Password</label>
							<input type="password" required asp-for="Password"  />
							<span asp-validation-for="Password" class="text-danger"></span>
						</div>
						<div class="form-input">
							<label>Confirm Password</label>
							<input type="password" required asp-for="ConfirmPassword"  />
							<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
						</div>
						<div class="text-danger" asp-validation-summary="ModelOnly">

						</div>
						<label class="container">
							I read the conditions <a href="#">I agree</a>
							<input type="checkbox">
							<span class="checkmark"></span>
						</label>
						<button class="btn">let's start</button>
					</form>
					<div class="copy-right text-center">
						<p>
							© 2022 all rights reserved
						</p>
					</div>
				</div>

			</div>

		</div>
	</section>
	<!-- //login-section -->
</body>

</html>